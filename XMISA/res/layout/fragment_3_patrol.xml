<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="944dp"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/layout_patrol"
        android:layout_width="944dp"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <com.nti56.xmisa.adapter.MyListView
            android:id="@+id/list_patrol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="56dp"
            android:divider="@color/black"
            android:dividerHeight="1dp" />

        <Button
            android:id="@+id/btn_patrol_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/task_add"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="944dp"
            android:layout_height="56dp"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/id"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/task_date"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/time_zone"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="256dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/patrol_id"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/building"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="145dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/person"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="115dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/state"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_ptl_detail"
        android:layout_width="944dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/layout_ptl_detail_info"
            android:layout_width="944dp"
            android:layout_height="90dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="944dp"
                android:layout_height="42dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_ptl_detail_back"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/back"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_ptl_detail_save"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_ptl_detail_commit"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/commit"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_ptl_detail_scan"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/scan_rfid"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="944dp"
                android:layout_height="48dp"
                android:background="@color/gray_light"
                android:gravity="fill_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="@string/task_date_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_ptl_detail_date"
                    android:layout_width="174dp"
                    android:layout_height="42dp"
                    android:background="@drawable/edit_top"
                    android:gravity="bottom|left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="2016-04-28"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="42dp"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="@string/patrol_id_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_ptl_detail_orderid"
                    android:layout_width="174dp"
                    android:layout_height="42dp"
                    android:background="@drawable/edit_top"
                    android:gravity="bottom|left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="XC2016042803S08"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="42dp"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="@string/building_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_ptl_detail_building"
                    android:layout_width="71dp"
                    android:layout_height="42dp"
                    android:background="@drawable/edit_top"
                    android:gravity="bottom|left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="71dp"
                    android:layout_height="42dp"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="@string/state_nc_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_ptl_detail_statenc"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:background="@drawable/edit_top"
                    android:gravity="bottom|left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="未反馈"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="944dp"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <com.nti56.xmisa.adapter.MyListView
                android:id="@+id/list_ptl_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="56dp"
                android:divider="@color/black"
                android:dividerHeight="1dp" />

            <LinearLayout
                android:layout_width="944dp"
                android:layout_height="56dp"
                android:background="@color/black"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/id"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/floor"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/patrol_point"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/patrol_result"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/patrol_trouble"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="129dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/picture"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/task_solution"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="126dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/correct_date"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
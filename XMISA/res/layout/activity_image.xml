<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1024dp"
    android:layout_height="552dp"
    android:layout_gravity="center"
    android:background="@drawable/login_bg"
    android:orientation="horizontal"
    tools:context="com.nti56.xmisa.ImageActivity" >

    <LinearLayout
        android:layout_width="139dp"
        android:layout_height="552dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_photo_s_1"
            android:layout_width="128dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="28dp"
            android:background="@color/yellow" />

        <ImageView
            android:id="@+id/iv_photo_s_2"
            android:layout_width="128dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/iv_photo_s_3"
            android:layout_width="128dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/iv_photo_s_4"
            android:layout_width="128dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/btn_take_camera"
            android:layout_width="128dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/take_camera"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="128dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="@string/take_photo"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_save_back"
            android:layout_width="128dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="@string/save_back"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_save_upload"
            android:layout_width="128dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="@string/save_upload"
            android:textSize="18dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_image_photo"
        android:layout_width="880dp"
        android:layout_height="495dp"
        android:layout_gravity="center"
        android:background="@color/white" />

</LinearLayout>
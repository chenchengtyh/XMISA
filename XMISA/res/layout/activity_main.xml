<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/leftList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_store"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:background="@drawable/button_1_1_store_bg"
            android:gravity="center"
            android:paddingTop="50dp"
            android:singleLine="true"
            android:text="@string/store"
            android:textColor="@drawable/button_text_color"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_check"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:background="@drawable/button_1_2_check_bg"
            android:gravity="center"
            android:paddingTop="50dp"
            android:singleLine="true"
            android:text="@string/quality_check"
            android:textColor="@drawable/button_text_color"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_maintain"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:background="@drawable/button_1_3_maintain_bg"
            android:gravity="center"
            android:paddingTop="50dp"
            android:singleLine="true"
            android:text="@string/maintain"
            android:textColor="@drawable/button_text_color"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_rfid"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:background="@drawable/button_1_4_rfid_bg"
            android:gravity="center"
            android:paddingTop="50dp"
            android:singleLine="true"
            android:text="@string/rfid"
            android:textColor="@drawable/button_text_color"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_setting"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:background="@drawable/button_1_5_setting_bg"
            android:gravity="center"
            android:paddingTop="50dp"
            android:singleLine="true"
            android:text="@string/setting"
            android:textColor="@drawable/button_text_color"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="944dp"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/layout_assign"
        android:layout_width="944dp"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <com.nti56.xmisa.adapter.MyListView
            android:id="@+id/list_assign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:divider="@color/black"
            android:dividerHeight="1dp" />

        <LinearLayout
            android:layout_width="944dp"
            android:layout_height="56dp"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/id"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/task_date"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/assign_id"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/type"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="154dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/goods_name"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/building"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/car_num"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/check_line"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/state"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_asg_detail"
        android:layout_width="944dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/layout_asg_detail_info"
            android:layout_width="944dp"
            android:layout_height="127dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="944dp"
                android:layout_height="42dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_asg_detail_back"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/back"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_asg_detail_save"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_asg_detail_commit"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/assign_sure"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="944dp"
                android:layout_height="42dp"
                android:background="@color/gray_light"
                android:gravity="fill_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="@string/task_date_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_asg_detail_date"
                    android:layout_width="115dp"
                    android:layout_height="42dp"
                    android:background="@drawable/edit_top"
                    android:gravity="bottom|left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="2016-04-28"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="@string/assign_id_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_asg_detail_orderid"
                    android:layout_width="165dp"
                    android:layout_height="42dp"
                    android:background="@drawable/edit_top"
                    android:gravity="bottom|left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="WRHA0604270090"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="@string/type_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_asg_detail_type"
                    android:layout_width="230dp"
                    android:layout_height="42dp"
                    android:background="@drawable/edit_top"
                    android:gravity="bottom|left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="货位调整（翻垛）入库任务"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="66dp"
                    android:layout_height="42dp"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="@string/building_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_asg_detail_building"
                    android:layout_width="40dp"
                    android:layout_height="42dp"
                    android:background="@drawable/edit_top"
                    android:gravity="bottom|left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="03"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="944dp"
                android:layout_height="43dp"
                android:background="@color/gray_light"
                android:gravity="fill_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:gravity="top|right"
                    android:paddingTop="6dp"
                    android:text="@string/total_num_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_asg_detail_totalnum"
                    android:layout_width="63dp"
                    android:layout_height="43dp"
                    android:background="@drawable/edit_bottom"
                    android:gravity="top|left"
                    android:paddingLeft="6dp"
                    android:paddingTop="7dp"
                    android:singleLine="true"
                    android:text="1800"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:gravity="top|right"
                    android:paddingTop="6dp"
                    android:text="@string/goods_id_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_asg_detail_goodsid"
                    android:layout_width="80dp"
                    android:layout_height="43dp"
                    android:background="@drawable/edit_bottom"
                    android:gravity="top|left"
                    android:paddingLeft="6dp"
                    android:paddingTop="7dp"
                    android:singleLine="true"
                    android:text="110676"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:gravity="top|right"
                    android:paddingTop="6dp"
                    android:text="@string/goods_name_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_asg_detail_goodsname"
                    android:layout_width="260dp"
                    android:layout_height="43dp"
                    android:background="@drawable/edit_bottom"
                    android:gravity="top|left"
                    android:paddingLeft="6dp"
                    android:paddingTop="7dp"
                    android:singleLine="true"
                    android:text="云南曲靖沾益C3L-2015片烟"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="93dp"
                    android:layout_height="43dp"
                    android:gravity="top|right"
                    android:paddingTop="6dp"
                    android:text="@string/car_num_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_asg_detail_carnum"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:background="@drawable/edit_bottom"
                    android:gravity="top|left"
                    android:paddingLeft="6dp"
                    android:paddingTop="7dp"
                    android:singleLine="true"
                    android:text="云AD0296"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <RelativeLayout
            android:layout_width="944dp"
            android:layout_height="match_parent"
            android:background="@color/white_light" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="20dp"
                android:gravity="fill_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="43dp"
                    android:gravity="center|right"
                    android:text="@string/check_num_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <EditText
                    android:id="@+id/et_asg_detail_check_num"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:singleLine="true"
                    android:text="1800"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="fill_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="43dp"
                    android:gravity="center|right"
                    android:text="@string/check_line_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <RadioGroup
                    android:id="@+id/radiogroup_assign"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/check_line1"
                        android:textColor="@color/black"
                        android:textSize="19dp" />

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/check_line2"
                        android:textColor="@color/black"
                        android:textSize="19dp" />

                    <RadioButton
                        android:id="@+id/radio3"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/check_line3"
                        android:textColor="@color/black"
                        android:textSize="19dp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="400dp"
                android:layout_marginTop="23dp"
                android:gravity="fill_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="43dp"
                    android:gravity="center|right"
                    android:text="@string/check_item_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <CheckBox
                    android:id="@+id/cb_asg_detail_weight"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="15dp"
                    android:checked="true"
                    android:text="@string/weight"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <CheckBox
                    android:id="@+id/cb_asg_detail_water"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:checked="true"
                    android:text="@string/water"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <CheckBox
                    android:id="@+id/cb_asg_detail_appearance"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:checked="true"
                    android:text="@string/appearance"
                    android:textColor="@color/black"
                    android:textSize="19dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="550dp"
                android:layout_marginTop="70dp"
                android:gravity="fill_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb_asg_detail_mould"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="15dp"
                    android:checked="true"
                    android:text="@string/mould"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <CheckBox
                    android:id="@+id/cb_asg_detail_odor"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:checked="true"
                    android:text="@string/odor"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <CheckBox
                    android:id="@+id/cb_asg_detail_impurity"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:checked="true"
                    android:text="@string/impurity"
                    android:textColor="@color/black"
                    android:textSize="19dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_asg_detail_mothy"
                android:layout_width="100dp"
                android:layout_height="43dp"
                android:layout_marginLeft="565dp"
                android:layout_marginTop="117dp"
                android:checked="true"
                android:text="@string/mothy"
                android:textColor="@color/black"
                android:textSize="19dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
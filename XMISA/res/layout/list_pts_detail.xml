<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_list_pts_detail"
    android:layout_width="944dp"
    android:layout_height="56dp"
    android:descendantFocusability="afterDescendants"
    android:orientation="horizontal" >

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_cc"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:id="@+id/public_id"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="50"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_cc" />

    <EditText
        android:id="@+id/et_pts_detail_floor"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="number"
        android:singleLine="true"
        android:text="90"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_cc" />

    <EditText
        android:id="@+id/et_pts_detail_cardnum"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:text="200"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_cc" />

    <EditText
        android:id="@+id/et_pts_detail_serricorne"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="number"
        android:singleLine="true"
        android:text="120"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_cc" />

    <EditText
        android:id="@+id/et_pts_detail_elutella"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="number"
        android:singleLine="true"
        android:text="150"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_cc" />

    <TextView
        android:id="@+id/tv_pts_detail_picture"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:text="130"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="18dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_cc" />

    <EditText
        android:id="@+id/et_pts_detail_solution"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:text="196"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/transparent" />

</LinearLayout>
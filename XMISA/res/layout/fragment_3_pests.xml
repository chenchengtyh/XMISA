<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="944dp"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/layout_pests"
        android:layout_width="944dp"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <com.nti56.xmisa.adapter.MyListView
            android:id="@+id/list_pests"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="56dp"
            android:divider="@color/black"
            android:dividerHeight="1dp" />

        <Button
            android:id="@+id/btn_pests_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/list_pests"
            android:layout_marginTop="-53dp"
            android:gravity="center"
            android:text="@string/task_add"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="944dp"
            android:layout_height="56dp"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/id"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/task_date"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="206dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/pests_id"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/building"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/note"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/person"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_cc" />

            <TextView
                android:layout_width="105dp"
                android:layout_height="54dp"
                android:background="@color/gray_8f"
                android:gravity="center"
                android:text="@string/state"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_pts_detail"
        android:layout_width="944dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/layout_pts_detail_info"
            android:layout_width="944dp"
            android:layout_height="127dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="944dp"
                android:layout_height="42dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_pts_detail_back"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/back"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_pts_detail_save"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_pts_detail_commit"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/commit"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_pts_detail_scan"
                    android:layout_width="115dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/scan_rfid"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="944dp"
                android:layout_height="42dp"
                android:background="@color/gray_light"
                android:gravity="fill_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="@string/task_date_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_pts_detail_date"
                    android:layout_width="174dp"
                    android:layout_height="42dp"
                    android:background="@drawable/edit_top"
                    android:gravity="bottom|left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="2016-04-28"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="42dp"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="@string/pests_id_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_pts_detail_orderid"
                    android:layout_width="174dp"
                    android:layout_height="42dp"
                    android:background="@drawable/edit_top"
                    android:gravity="bottom|left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="CQ2016042803S08"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="42dp"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="@string/building_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_pts_detail_building"
                    android:layout_width="71dp"
                    android:layout_height="42dp"
                    android:background="@drawable/edit_top"
                    android:gravity="bottom|left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="71dp"
                    android:layout_height="42dp"
                    android:gravity="bottom|right"
                    android:paddingBottom="5dp"
                    android:text="@string/state_nc_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tv_pts_detail_statenc"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:background="@drawable/edit_top"
                    android:gravity="bottom|left"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="未反馈"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="944dp"
                android:layout_height="43dp"
                android:background="@color/gray_light"
                android:gravity="fill_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="43dp"
                    android:gravity="top|right"
                    android:paddingTop="6dp"
                    android:text="@string/note_"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <EditText
                    android:id="@+id/et_pts_detail_note"
                    android:layout_width="836dp"
                    android:layout_height="43dp"
                    android:background="@drawable/edit_bottom"
                    android:gravity="top|left"
                    android:paddingLeft="6dp"
                    android:paddingTop="7dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="944dp"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <com.nti56.xmisa.adapter.MyListView
                android:id="@+id/list_pts_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="56dp"
                android:divider="@color/black"
                android:dividerHeight="1dp" />

            <Button
                android:id="@+id/btn_pts_detail_addlist"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/list_pts_detail"
                android:layout_marginTop="-50dp"
                android:gravity="center"
                android:text="@string/record_add"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="944dp"
                android:layout_height="56dp"
                android:background="@color/black"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/id"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/floor"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/pests_card_num"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/pests_serricorne"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/pests_elutella"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/picture"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_cc" />

                <TextView
                    android:layout_width="196dp"
                    android:layout_height="54dp"
                    android:background="@color/gray_8f"
                    android:gravity="center"
                    android:text="@string/task_solution"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:background="@color/gray" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_pts_detail_floor"
                android:layout_width="92dp"
                android:layout_height="56dp"
                android:layout_marginLeft="51dp"
                android:background="@color/transparent" />

            <RadioGroup
                android:id="@+id/rg_pts_floor"
                android:layout_width="92dp"
                android:layout_height="206dp"
                android:layout_alignLeft="@id/btn_pts_detail_floor"
                android:layout_alignRight="@id/btn_pts_detail_floor"
                android:layout_below="@id/btn_pts_detail_floor"
                android:background="@color/gray_cc"
                android:orientation="vertical"
                android:visibility="gone" >

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="92dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/user_bg"
                    android:paddingLeft="13dp"
                    android:text="1楼"
                    android:textColor="@color/gray"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="92dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/user_bg"
                    android:paddingLeft="13dp"
                    android:text="2楼"
                    android:textColor="@color/gray"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="92dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/user_bg"
                    android:paddingLeft="13dp"
                    android:text="3楼"
                    android:textColor="@color/gray"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="92dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/user_bg"
                    android:paddingLeft="13dp"
                    android:text="4楼"
                    android:textColor="@color/gray"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/radio5"
                    android:layout_width="92dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/user_bg"
                    android:paddingLeft="13dp"
                    android:text="5楼"
                    android:textColor="@color/gray"
                    android:textSize="18dp" />
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>